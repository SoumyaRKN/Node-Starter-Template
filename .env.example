# ==================== COMMON ====================
# PORT: The port number the server will listen on
# Example: 3000, 8080
PORT=

# DEBUG: Enable or disable debug logs
# Possible values: TRUE, FALSE
DEBUG=

# ==================== DATABASE ====================
# DB_DIALECT: Database type used by Sequelize
# Possible values: postgres, mysql, sqlite, mssql
DB_DIALECT=

# DB_HOST: Database server hostname or IP
# Example: localhost, 127.0.0.1
DB_HOST=

# DB_PORT: Port number for database connection
# Example: 5432 for Postgres, 3306 for MySQL
DB_PORT=

# DB_USER: Database username
DB_USER=

# DB_PASS: Database password
DB_PASS=

# DB_NAME: Database name
DB_NAME=

# ==================== MONGO =====================
# MONGO_URI: Full MongoDB connection URI
# Example: mongodb://user:password@localhost:27017/dbname
MONGO_URI=

# ==================== VAULT =====================
# VAULT_ADDR: URL of the HashiCorp Vault server
# Example: http://127.0.0.1:8200
VAULT_ADDR=

# VAULT_TOKEN: Vault authentication token
# Example: s.xxxxxxxx
VAULT_TOKEN=

# ==================== AUTH ======================
# JWT_SECRET: Secret key used to sign JSON Web Tokens
# Example: replace-me, some-random-secret
JWT_SECRET=
